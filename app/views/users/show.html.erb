<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.shop_name + "さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">店舗名</th>
            <td class="table__col2"><%= @user.shop_name %></td>
          </tr>
          <tr>
            <th class="table__col1">担当者名</th>
            <td class="table__col2"><%= @user.person_name %></td>
          </tr>
          <tr>
            <th class="table__col1">住所</th>
            <td class="table__col2"><%= @user.address %></td>
          </tr>
          <tr>
            <th class="table__col1">電話番号</th>
            <td class="table__col2"><%= @user.phone_number %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.shop_name + "さんのプロトタイプ"%>
      </h2>
      <div class="user__card">
        <% @prototypes.each do |prototype| %>
          <%= render partial: "/prototypes/prototype", locals: { prototype: prototype }  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
