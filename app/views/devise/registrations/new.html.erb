<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :email, "eメールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :shop_name, "店舗名" %><br />
          <%= f.text_field :shop_name, id:"shop_name" %>
        </div>

        <div class="field">
          <%= f.label :person_name, "担当者名" %><br />
          <%= f.text_field :person_name,  id:"person_name" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, id:"address" %>
        </div>

        <div class="field">
          <%= f.label :phone_number, "電話番号" %><br />
          <%= f.number_field :phone_number, class: :form__text, id:"user_position" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>